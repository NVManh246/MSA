    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@id/start"
        app:duration="300"
        app:motionInterpolator="easeInOut">

        <OnSwipe
            app:dragDirection="dragUp"
            app:touchAnchorId="@id/recyclerSong"
            app:touchAnchorSide="top"
            app:maxAcceleration="200"/>

        <KeyFrameSet>

            <KeyAttribute
                android:translationY="0dp"
                app:framePosition="0"
                app:motionTarget="@id/textTotal" />
            <KeyAttribute
                android:translationY="100dp"
                app:framePosition="100"
                app:motionTarget="@id/textTotal" />

        </KeyFrameSet>

    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/viewList"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="250dp"
            android:background="@drawable/background_view_list"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/viewControlMini"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginLeft="100dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <Constraint
            android:id="@+id/recyclerSong"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            app:layout_constraintBottom_toBottomOf="@id/viewList"
            app:layout_constraintLeft_toLeftOf="@id/viewList"
            app:layout_constraintRight_toRightOf="@id/viewList"
            app:layout_constraintTop_toTopOf="@+id/viewList" />

        <Constraint
            android:id="@+id/textTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/viewList"
            app:layout_constraintRight_toRightOf="parent" />

        <Constraint
            android:id="@+id/textOutline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            app:layout_constraintBottom_toTopOf="@+id/textTotal"
            app:layout_constraintRight_toRightOf="parent" />

        <Constraint
            android:id="@+id/imageIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/textTotal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textOutline" />

        <Constraint
            android:id="@+id/editSearch"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            app:layout_constraintRight_toRightOf="@id/guidelineOne"
            app:layout_constraintTop_toTopOf="parent"/>

        <Constraint
            android:id="@+id/viewSearch"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/editSearch"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <Constraint
            android:id="@+id/buttonCloseSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="close"
            app:layout_constraintTop_toTopOf="@+id/editSearch"
            app:layout_constraintBottom_toBottomOf="@+id/editSearch"
            app:layout_constraintLeft_toRightOf="@+id/viewSearch"/>

        <Constraint
            android:id="@+id/viewMedia"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/viewList"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/background_view_list"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/viewControlMini"
            android:layout_width="0dp"
            android:layout_height="70dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <Constraint
            android:id="@+id/recyclerSong"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            app:layout_constraintBottom_toTopOf="@+id/viewControlMini"
            app:layout_constraintLeft_toLeftOf="@id/viewList"
            app:layout_constraintRight_toRightOf="@id/viewList"
            app:layout_constraintTop_toTopOf="@+id/viewList" />

        <Constraint
            android:id="@+id/textTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:alpha="0"
            app:layout_constraintBottom_toTopOf="@+id/viewList"
            app:layout_constraintRight_toRightOf="parent" />

        <Constraint
            android:id="@+id/textOutline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            app:layout_constraintBottom_toTopOf="@+id/viewList"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/imageIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:scaleX="0.7"
            android:scaleY="0.7"
            app:layout_constraintBottom_toBottomOf="@+id/textTotal"
            app:layout_constraintRight_toLeftOf="@id/textOutline"
            app:layout_constraintTop_toTopOf="@+id/textOutline" />

        <Constraint
            android:id="@+id/editSearch"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:alpha="0"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/imageSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:src="@drawable/ic_search_white_24dp"
            app:layout_constraintBottom_toBottomOf="@id/editSearch"
            app:layout_constraintLeft_toLeftOf="@id/editSearch"
            app:layout_constraintTop_toTopOf="@id/editSearch" />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end2">
        <Constraint
            android:id="@+id/viewSearch"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/editSearch"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="20dp"/>

        <Constraint
            android:id="@+id/editSearch"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/buttonCloseSearch"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <Constraint
            android:id="@+id/buttonCloseSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="close"
            app:layout_constraintTop_toTopOf="@+id/editSearch"
            app:layout_constraintBottom_toBottomOf="@+id/editSearch"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/editSearch"
            android:layout_marginRight="10dp"/>


    </ConstraintSet>

    <ConstraintSet android:id="@+id/end3">
        <Constraint
            android:id="@+id/viewMedia"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </ConstraintSet>

</MotionScene>
