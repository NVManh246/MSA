<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
    android:id="@+id/mainView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainActivity"
    android:background="#000E53"
    app:layoutDescription="@xml/motion_play_list">

    <View
        android:id="@+id/viewList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_view_list"
        android:layout_marginTop="250dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerSong"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/viewList"
        app:layout_constraintBottom_toBottomOf="@id/viewList"
        app:layout_constraintLeft_toLeftOf="@id/viewList"
        app:layout_constraintRight_toRightOf="@id/viewList"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <View
        android:id="@+id/viewControlMini"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="100dp"
        android:background="@drawable/background_control_mini"/>

    <ImageView
        android:id="@+id/imageSongControl"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@id/viewControlMini"
        app:layout_constraintBottom_toBottomOf="@id/viewControlMini"
        app:layout_constraintLeft_toLeftOf="@id/viewControlMini"
        android:src="@drawable/ic_album_white_24dp"
        android:layout_marginLeft="20dp"/>

    <ImageView
        android:id="@+id/buttonControl"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_pause_white_24dp"
        app:layout_constraintTop_toTopOf="@id/viewControlMini"
        app:layout_constraintBottom_toBottomOf="@id/viewControlMini"
        app:layout_constraintRight_toRightOf="@id/viewControlMini"
        android:layout_marginRight="20dp"
        android:background="?attr/selectableItemBackground"/>

    <TextView
        android:id="@+id/textTitleControl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="abc abc abc abc abc abc abc abc abc abc abc abc "
        app:layout_constraintTop_toTopOf="@id/imageSongControl"
        app:layout_constraintLeft_toRightOf="@id/imageSongControl"
        app:layout_constraintBottom_toTopOf="@+id/textArtistControl"
        app:layout_constraintRight_toLeftOf="@+id/buttonControl"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/textArtistControl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        app:layout_constraintLeft_toRightOf="@id/imageSongControl"
        app:layout_constraintRight_toRightOf="@+id/textTitleControl"
        app:layout_constraintTop_toBottomOf="@+id/textTitleControl"
        app:layout_constraintBottom_toBottomOf="@id/imageSongControl"
        android:textColor="@android:color/darker_gray"
        android:layout_marginLeft="10dp"
        android:maxLines="1"
        android:ellipsize="end"/>

    <com.rikkei.seekarc.SeekArc
        android:id="@+id/seekArc"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="@id/viewControlMini"
        app:layout_constraintBottom_toBottomOf="@id/viewControlMini"
        app:layout_constraintRight_toRightOf="@id/viewControlMini"
        android:layout_gravity="center"
        android:padding="30dp"
        app:startAngle="0"
        app:sweepAngle="360"
        app:touchInside="false"
        app:enabled="false"
        app:progresss="50"
        app:arcColor="@android:color/white"
        app:progressColor="@android:color/white"/>


    <TextView
        android:id="@+id/textTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/viewList"
        android:text="total"
        android:textColor="@android:color/white"
        android:layout_margin="20dp"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/textOutline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ABCNCVM"
        android:textColor="@android:color/white"
        android:textSize="50sp"
        android:textStyle="bold"
        android:layout_marginRight="20dp"/>

    <ImageView
        android:id="@+id/imageIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_flash_on_white_24dp" />

    <EditText
        android:id="@+id/editSearch"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_edit_search"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="50dp"
        android:textColor="@android:color/white"/>

    <ImageView
        android:id="@+id/imageSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/editSearch"
        app:layout_constraintBottom_toBottomOf="@id/editSearch"
        app:layout_constraintLeft_toLeftOf="@id/editSearch"
        android:src="@drawable/ic_search_white_24dp"
        android:layout_marginLeft="10dp"/>

</androidx.constraintlayout.motion.widget.MotionLayout>
